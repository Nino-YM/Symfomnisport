{% extends 'base.html.twig' %}

{% block title %}Section Details{% endblock %}

{% block body %}
    <h1 class="my-4">Section Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>{{ section.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sections_index') }}" class="btn btn-info mr-2">Back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_sections_edit', {'id': section.id}) }}" class="btn btn-warning mr-2">Edit</a>
        {{ include('sections/_delete_form.html.twig', { 'class': 'btn btn-danger' }) }}
    {% endif %}
{% endblock %}
