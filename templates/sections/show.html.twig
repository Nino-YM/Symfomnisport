{% extends 'base.html.twig' %}

{% block title %}Section Details{% endblock %}

{% block body %}
    <h1 class="my-4">Section Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>{{ section.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sections_index') }}" class="btn btn-info btn-sm">Back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_sections_edit', {'id': section.id}) }}" class="btn btn-warning btn-sm">Edit</a>
        {{ include('sections/_delete_form.html.twig', { 'id': section.id, 'button_class': 'btn btn-danger btn-sm', 'button_label': 'Delete' }) }}
    {% endif %}
{% endblock %}
