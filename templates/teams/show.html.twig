{% extends 'base.html.twig' %}

{% block title %}Team Details{% endblock %}

{% block body %}
    <h1 class="my-4">Team Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th scope="row">Members</th>
                <td>
                    {% if team.members is empty %}
                        <p>No members in this team.</p>
                    {% else %}
                        <ul class="list-group">
                            {% for member in team.members %}
                                <li class="list-group-item">{{ member.name }} {{ member.lastname }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_teams_index') }}" class="btn btn-info mr-2">Back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_teams_edit', {'id': team.id}) }}" class="btn btn-warning mr-2">Edit</a>
        {{ include('teams/_delete_form.html.twig', { 'class': 'btn btn-danger' }) }}
    {% endif %}
{% endblock %}
