<form method="post" action="{{ path('app_activities_delete', {'id': activity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity.id) }}">
    <button type="submit" class="{{ class|default('btn btn-danger') }}">{{ label|default('Delete') }}</button>
</form>
