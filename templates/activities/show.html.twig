{% extends 'base.html.twig' %}

{% block title %}Activities{% endblock %}

{% block body %}
    <h1>Activities</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ activity.date ? activity.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activities_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_activities_edit', {'id': activity.id}) }}">edit</a>

        {{ include('activities/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
