{% extends 'base.html.twig' %}

{% block title %}Member Details{% endblock %}

{% block body %}
    <h1 class="my-4">Member Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th scope="row">Lastname</th>
                <td>{{ member.lastname }}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{ member.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_members_index') }}" class="btn btn-info mr-2">Back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_members_edit', {'id': member.id}) }}" class="btn btn-warning mr-2">Edit</a>
        {{ include('members/_delete_form.html.twig', { 'class': 'btn btn-danger' }) }}
    {% endif %}
{% endblock %}
