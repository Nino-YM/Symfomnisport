{% extends 'base.html.twig' %}

{% block title %}Member Details{% endblock %}

{% block body %}
    <h1 class="my-4">Member Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th scope="row">Lastname</th>
                <td>{{ member.lastname }}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{ member.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_members_index') }}" class="btn btn-info btn-sm">Back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_members_edit', {'id': member.id}) }}" class="btn btn-warning btn-sm">Edit</a>
        {{ include('members/_delete_form.html.twig', { 'id': member.id, 'button_class': 'btn btn-danger btn-sm', 'button_label': 'Delete' }) }}
    {% endif %}
{% endblock %}
