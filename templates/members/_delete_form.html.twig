<form method="post" action="{{ path('app_members_delete', {'id': id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button type="submit" class="{{ button_class|default('btn btn-danger btn-sm') }}">{{ button_label|default('Delete') }}</button>
</form>
